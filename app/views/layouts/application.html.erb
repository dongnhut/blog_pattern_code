<header id="header">
      <%= render 'layouts/header' %>
</header>
 <main>
 <div id= "menu" style="float: left ; width: 17%;">
      <%= render 'layouts/menu' %>
 </div>
 <div style="float: left; width: 75%; margin-left: 30px; ">
